<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pic_quiz_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pic_quiz_instruction"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/text_black"
            android:text="@string/picture_quiz_instructions"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pic_quiz_phrase"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/text_black"
            android:paddingBottom="@dimen/card_padding"
            android:paddingTop="@dimen/card_padding"
            android:textSize="@dimen/section_title"
            android:text="Ateso Phrase"
            android:layout_height="wrap_content" />

        <GridView
            android:id="@+id/pic_quiz_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_continue"
            android:text="Continue"
            android:layout_below="@id/pic_quiz_container"
            style="?android:attr/buttonStyleSmall"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>

